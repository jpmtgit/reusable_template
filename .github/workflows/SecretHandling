name: Secrets Handling

on:
 workflow_call:
  inputs:
    file_path:
      required: true
      type: string

jobs:
  Demo_secrets:
    runs-on: ubuntu-latest

    steps:
    - shell: bash
      env:
        SUPER_SECRET: ${{ secrets.API_KEY }}
      run: |
       echo "My secret is"
       echo "$SUPER_SECRET"
